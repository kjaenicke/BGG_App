
<div class="toolbar tabbar tabbar-labels">
  <div class="toolbar-inner">
    <a href="#tab-1" class="tab-link active">
      <i class="fa fa-info-circle fa-2x"></i>
      <span class="tabbar-label">Information</span>
    </a>
    <a href="#tab-2" class="tab-link">
      <i class="fa fa-bullhorn fa-2x"></i>
      <span class="tabbar-label">Forums</span>
    </a>
    <a href="#tab-3" class="tab-link">
      <i class="fa fa-comments-o fa-2x"></i>
      <span class="tabbar-label">Comments</span>
    </a>
    <a onclick="return false;" class="tab-link photoGallery muted">
      <i class="fa fa-photo fa-2x"></i>
      <span class="tabbar-label">Images</span>
    </a>
  </div>
</div>

<div class="page-content">
  <div class="tabs">
    <div id="tab-1" class="tab active">
      <div class="list-block search-box">
        <ul>
          {{#if title }}
          <li><div class="item-divider">Game Title</div></li>
          <li>
            <div class="item-content">
              <!-- <div class="item-media"><i class="icon icon-f7"></i></div> -->
              <div class="item-inner">
                <div class="item-title">{{ title }}</div>
                <!-- <div class="item-after">CEO</div> -->
              </div>
            </div>
          </li>
          {{/if}}
          {{#if thumbURL }}
          <li><div class="item-divider">{{ title }} Image</div></li>
          <li>
            <div class="item-content">
              <!-- <div class="item-media"><i class="icon icon-f7"></i></div> -->
              <div class="item-inner centered">
                <img style="" src="{{ thumbURL }}" />
              </div>
            </div>
          </li>
          {{/if}}
          {{#if boardGameRank }}
          <li><div class="item-divider">Board Game Rank</div></li>
          <li>
            <div class="item-content">
              <div class="item-media"><i class="ico-podium"></i></div>
              <div class="item-inner">
                <div class="item-title">{{ boardGameRank }}</div>
                <!-- <div class="item-after">CEO</div> -->
              </div>
            </div>
          </li>
          {{/if}}
          {{#if rating }}
          <li><div class="item-divider">Rating</div></li>
          <li>
            <div class="item-content">
              <div class="item-media"><i class="ico-stats-up"></i></div>
              <div class="item-inner">
                <div class="item-title">{{ rating }}</div>
                <!-- <div class="item-after">CEO</div> -->
              </div>
            </div>
          </li>
          {{/if}}
          {{#if description }}
          <li><div class="item-divider">Game Description</div></li>
          <li>
            <div class="item-content">
              <!-- <div class="item-media"><i class="icon icon-f7"></i></div> -->
              <div class="item-inner multiline">
                <div class="item-title">{{{ description }}}</div>
                <!-- <div class="item-after">CEO</div> -->
              </div>
            </div>
          </li>
          {{/if}}
        </ul>

        {{#if playingTime }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Playing Time</li>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ playingTime }} minutes</div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        {{/if}}

        {{#if minPlayers }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Number of Players</li>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ minPlayers }}{{#if maxPlayers}} - {{ maxPlayers }}{{/if}}</div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        {{/if}}

        {{#if minAge }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Minimum Age</li>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ minAge }}</div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        {{/if}}

        {{#if yearPublished }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Year Published</li>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ yearPublished }}</div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        {{/if}}

        {{#if mechanic }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Mechanics</li>
            {{#each mechanic }}
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ this.value }}</div>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if category }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Categories</li>
            {{#each category }}
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ this.value }}</div>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if subdomain }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Subdomains</li>
            {{#each subdomain }}
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ this.value }}</div>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if publisher }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Publisher</li>
            {{#each publisher }}
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title">{{ this }}</div>
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if honor }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Honors</li>
            {{#each honor }}
            <li>
              <div class="item-content">
                <div class="item-media"><i class="fa fa-trophy"></i></div>
                <div class="item-inner">
                  <div class="item-title">{{ this }}</div>
                  <!-- <div class="item-after">CEO</div> -->
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if designer }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Designers</li>
            {{#each designer }}
            <li>
              <div class="item-content">
                <!-- <div class="item-media"><i class="icon icon-f7"></i></div> -->
                <div class="item-inner">
                  <div class="item-title">{{ this }}</div>
                  <!-- <div class="item-after">CEO</div> -->
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if artist }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Artists</li>
            {{#each artist }}
            <li>
              <div class="item-content">
                <!-- <div class="item-media"><i class="icon icon-f7"></i></div> -->
                <div class="item-inner">
                  <div class="item-title">{{ this }}</div>
                  <!-- <div class="item-after">CEO</div> -->
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if versions }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Versions</li>
            {{#each versions }}
            <li>
              <div class="item-content">
                <!-- <div class="item-media"><i class="icon icon-f7"></i></div> -->
                <div class="item-inner">
                  <div class="item-title">{{ this.value }}</div>
                  <!-- <div class="item-after">CEO</div> -->
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

        {{#if expansions }}
        <div class="list-group">
          <ul>
            <li class="list-group-title">Expansions</li>
            {{#each expansions }}
            <li>
              <div class="item-content">
                <div class="item-media"><i class="fa fa-share-alt"></i></div>
                <div class="item-inner">
                  <div class="item-title">{{ this.title }}</div>
                  <!-- <div class="item-after">CEO</div> -->
                </div>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        {{/if}}

      </div>
    </div>

    <div id="tab-2" class="tab">
      <div class="list-block search-box forum-list">
      </div>
    </div>

    <div id="tab-3" class="tab">
      {{#if comments}}
      <div class="list-block media-list search-box">
        <ul>
            {{#each comments}}
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title-row">
                    <div class="item-title">By: {{ this.author }}</div>
                    <div class="item-after">Rating: {{ this.rating }} <i class="fa fa-linefix fa-star fa-fw"></i></div>
                  </div>
                  <div class="item-text multiline">{{ this.text }}</div>
                </div>
              </div>
            </li>
            {{/each}}
        </ul>
      </div>
      {{else}}
      <div class="no-comments">No Comments Found</div>
    {{/if}}
    </div>

    <div id="tab-4" class="tab">
      <div class="content-block">
      </div>
    </div>
  </div>
</div>
